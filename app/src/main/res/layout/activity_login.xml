<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/loginLayout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:text="Welcome Again!"
        android:textStyle="bold"
        android:paddingBottom="80sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="90dp"
        android:id="@+id/welcome"

        android:layout_marginLeft="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbackground1"
        android:layout_below="@+id/welcome"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20sp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:text="Login to your Account !"
                android:textSize="25dp"
                android:textColor="@color/grey"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/loginshape"
                android:hint="Mobile Phone"
                android:inputType="textShortMessage"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:drawablePadding="10sp"
                android:layout_marginTop="20sp"
                android:padding="10sp"
                android:fontFamily="sans-serif"
                android:drawableLeft="@drawable/phoneicon"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/loginshape"
                android:hint="Enter Password"
                android:textColor="@color/grey"
                android:textSize="20sp"
                android:padding="10sp"
                android:inputType="textPassword"
                android:drawablePadding="10sp"
                android:layout_marginTop="15sp"
                android:fontFamily="sans-serif"

                android:drawableLeft="@drawable/password"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password or Mobile is incorrect !"
                android:textColor="@color/red"
                android:layout_marginTop="10sp"
                android:textSize="20sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginbtn"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Login"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/login"
                android:textAllCaps="false"
                android:layout_marginTop="30sp"
                android:padding="10sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You don't have account?"
                    android:textColor="@color/grey"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Account"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:layout_marginTop="10sp"
                    android:clickable="true"
                    android:layout_marginStart="10sp"
                    android:id="@+id/accountbtn"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</RelativeLayout>