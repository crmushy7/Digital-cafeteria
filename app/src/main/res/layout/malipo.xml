<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/profile"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    error-->
    <LinearLayout
        android:id="@+id/malipo_error_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tve_dismissError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:paddingLeft="14sp"
                android:paddingRight="10sp"
                android:layout_gravity="end|center_horizontal"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="126sp"
            android:layout_height="126sp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/red_ring"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="86sp"
                android:layout_height="86sp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:src="@drawable/error"
                android:scaleType="fitXY"
                tools:ignore="DuplicateIds" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction Failed !"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:textColor="#FF1493"
            />
        <TextView
            android:id="@+id/tv_transactionfailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction did not succeed!"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ad_deposit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Okay"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/login"
            android:textAllCaps="false"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="20sp"
            android:padding="10sp"
            />
    </LinearLayout>
    <!--    success-->
    <LinearLayout
        android:id="@+id/ad_success_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/malipo_dismisSucces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:paddingLeft="14sp"
                android:paddingRight="10sp"
                android:layout_gravity="end|center_horizontal"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="135sp"
            android:layout_height="135sp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/green_ring"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:src="@drawable/successful"
                android:scaleType="fitXY"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaction was Successful !"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:textColor="#3DED97"
            />
        <TextView
            android:id="@+id/tv_successtransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TSh 4000 Deducted from your account"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:textColor="@color/black"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_transactionsuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Okay"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/login"
            android:textAllCaps="false"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:padding="10sp"
            />
    </LinearLayout>

</RelativeLayout>